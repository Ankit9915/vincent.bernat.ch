{# -*- html -*- #}
{% if resource.translations or previous or next or resource.meta.attachments %}
<nav id="lf-links">
  {# Translations #}
  {% if resource.translations %}
  <div class="lf-link">
    <a href="#" class="lf-sprite lf-sprite-flag lf-link-icon"
       title="{{ resource.meta.l10n.translations }}"></a>
    <div class="lf-link-details"><div class="lf-link-inner">
      <span class="lf-sprite lf-sprite-arrow-left"></span>
      <p>{{ resource.meta.l10n.translations }}</p>
      <ul>
	{% for translation in resource.translations %}
	<li><a href="{{ content_url(translation.url) }}">
	    {{ languages[translation.meta.language] }}
	</a></li>
	{% endfor %}
      </ul>
    </div></div>
  </div>
  {% endif %}
  {# Attachments #}
  {% if resource.meta.attachments %}
  <div class="lf-link">
    <a href="#" class="lf-sprite lf-sprite-attachment lf-link-icon"
       title="{{ resource.meta.l10n.attachments }}"></a>
    <div class="lf-link-details"><div class="lf-link-inner">
      <span class="lf-sprite lf-sprite-arrow-left"></span>
      <p>{{ resource.meta.l10n.attachments }}</p>
      <ul>
	{% for file, description in resource.meta.attachments %}
	{% if file.startswith('http://') or file.startswith('https://') %}
	<li><a href="{{ file }}">{{ description }}</a></li>
	{% else %}
	<li><a href="{{ media_url('files/' + file) }}">{{ description }}</a></li>
	{% endif %}
	{% endfor %}
      </ul>
    </div></div>
  </div>
  {% endif %}
</nav>
{% endif %}
