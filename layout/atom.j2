<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ resource.meta.language }}">
    <title>
        {{ resource.meta.title|escape }} | {{ resource.meta.author|escape }}
    </title>
    <link href="{{base}}{{ content_url(resource.url) }}" rel="self" />
    <link href="{{base}}{{ content_url(resource.meta.language) }}"/>
    <id>{{ content_url(resource.url) }}/</id>

    {% for res in resource.node|attr("walk_resources_sorted_by_time_" + resource.meta.language)() %}
    {% if loop.first %}
    <updated>{{ res.meta.modified|xmldatetime }}</updated>

    {% endif %}
    {% if loop.index0 < 10 %}
        <entry>
            <title type="html">{{ res.meta.title|escape }}</title>
            <author><name>{{ res.meta.author|escape }}</name></author>
            <link href="{{base}}{{ content_url(res.url) }}"/>
            <updated>{{ res.meta.created|xmldatetime }}</updated>
            <id>{{ content_url(res.url) }}</id>

            <content type="html">
                {% refer to res.url as file -%}
                {% filter forceescape -%}
                {{ file.article|markdown|typogrify }}
                {%- endfilter %}
            </content>
        </entry>
    {% endif %}
    {% endfor %}
</feed>
