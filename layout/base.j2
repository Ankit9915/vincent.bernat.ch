{# -*- html -*- #}
<!doctype html>
<!--[if IE 7 ]>    <html lang="{{ resource.meta.language }}" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="{{ resource.meta.language }}" class="no-js ie8"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="{{ resource.meta.language }}" class="no-js"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width; initial-scale=1.0">

  <title>{{ resource.meta.title }} | Vincent Bernat</title>
  <meta name="keywords" content="{{ resource.meta.keywords }}">
  <meta name="author" content="{{ resource.meta.author }}">

  <link rel="shortcut icon" href="{{ media_url('favicon.ico') }}">
  <link rel="stylesheet" href="{{ media_url('css/reset.css') }}" type="text/css" />
  <link rel="stylesheet" href="{{ media_url('css/luffy.css') }}" type="text/css" />

  <script src="{{ media_url('js/libs/modernizr-1.7.min.js') }}"></script>
</head>
<body>

  {# Navigation bar #}
  <nav id="lf-navbar">
    <div id="lf-homeicon">
      <a href="{{ content_url( '/' + resource.meta.language ) }}"></a>
    </div>
    <div id="lf-menubar">
      <form id="lf-search">
	<span id="lf-search-glass"><i></i></span>
	<input id="lf-search-query" type="text" name="q"
	       placeholder="{{resource.meta.l10n.search}}" value="">
      </form>
      {% include "menu.j2" %}
    </div>
  </nav>
  
  {# Pages #}
  <div id="lf-pages">
    <div id="lf-page-1"></div>
    <div id="lf-page-2"></div>
    <div id="lf-page">
      <article>
	<header>
	  {% block header %}
	  <h1>{{resource.meta.title}}</h1>
	  <h2>{{resource.meta.author}}</h2>
	  {% if resource.meta.created is defined %}
	  <time datetime="{{ resource.meta.created.strftime('%Y-%m-%dT%H:%M:%S') }}" pubdate>
	    {{ resource.meta.created.strftime('%a, %d %b %Y') }}
	  </time>
	  {% endif %}
	  {% endblock header %}
	</header>
	{% block main %}
	{% endblock main %}
      </article>
    </div>
  </div>

  {% if resource.translations is defined %}
  <div id="lf-translations">
    <p>{{ resource.meta.l10n.translations }}</p>
    <ul>
      {% for translation in resource.translations %}
      <li><a href="{{ translation.full_url }}">
	  {{ languages[translation.meta.language] }}
	</a></li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}
  
  {# Footer #}
  <footer>
    <address>
      Â© 2011 <a href="mailto:bernat@luffy.cx">Vincent Bernat</a>
    </address>
    <h3>{{ resource.meta.l10n.otherlinks }}</h3>
    <ul>
      <li><a href="https://github.com/vincentbernat">GitHub</a></li>
      <li><a href="http://www.linkedin.com/in/vincentbernat">LinkedIn</a></li>
      <li><a href="http://qa.debian.org/developer.php?login=bernat">Debian</a></li>
      <li><a href="http://delicious.com/vbernat/">Delicious</a></li>
      <li><a href="http://twitter.com/vince2_">@vince2_</a></li>
    </ul>
    <h3>Sources</h3>
    <ul>
      <li>Powered by <a href="http://ringce.com/hyde">Hyde</a></li>
      <li><a href="https://github.com/vincentbernat/www.luffy.cx">Site</a></li>
      <li>
	<a href="https://github.com/vincentbernat/www.luffy.cx/tree/master/content/{{ resource.relative_path }}">Page</a>
      </li>
    </ul>
  </footer>


  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
  <script>
    window.jQuery || document.write('<script src="js/libs/jquery-1.5.2.min.js">\x3C/script>')
  </script>
  <script src="{{ media_url('js/luffy.js') }}"></script>

  {% include "analytics.j2" %}
</body>
</html>
